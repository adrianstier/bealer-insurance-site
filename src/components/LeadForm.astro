---
interface Props {
  insuranceType?: string;
  heading?: string;
  subheading?: string;
}

const {
  insuranceType = "",
  heading = "See Your Rate in 60 Seconds",
  subheading = "Quick form - no commitment required"
} = Astro.props;

const insuranceOptions = [
  { value: "auto", label: "Auto Insurance" },
  { value: "home", label: "Home Insurance" },
  { value: "renters", label: "Renters Insurance" },
  { value: "business", label: "Business Insurance" },
  { value: "life", label: "Life Insurance" },
  { value: "bundle", label: "Bundle (Home + Auto)" },
  { value: "unsure", label: "Not sure - Help me decide" },
];
---

<section id="quote-form" class="py-16 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-5 text-white">
        <div class="text-center">
          <h2 class="text-2xl md:text-3xl font-bold mb-1">{heading}</h2>
          <p class="text-blue-100 text-sm">{subheading}</p>
        </div>
      </div>

      <div class="p-6 md:p-8">
        <!-- Compact trust bar -->
        <div class="flex justify-center gap-6 mb-6 pb-6 border-b border-gray-100">
          <div class="flex items-center gap-1.5 text-xs text-gray-500">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
            <span>Secure</span>
          </div>
          <div class="flex items-center gap-1.5 text-xs text-gray-500">
            <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span>Response in hours</span>
          </div>
          <div class="flex items-center gap-1.5 text-xs text-gray-500">
            <svg class="w-4 h-4 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span>4.9 rated</span>
          </div>
        </div>

        <!-- Step 1: Core Fields -->
        <form id="lead-form" class="space-y-5">
          <div id="step-1">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
              <div>
                <label for="lf-insuranceType" class="block text-sm font-medium text-gray-700 mb-1">
                  What do you need? <span class="text-red-500">*</span>
                </label>
                <select
                  id="lf-insuranceType"
                  name="insuranceType"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white text-base"
                >
                  <option value="">Select insurance type</option>
                  {insuranceOptions.map((option) => (
                    <option value={option.value} selected={insuranceType === option.value}>
                      {option.label}
                    </option>
                  ))}
                </select>
              </div>

              <div>
                <label for="lf-zipCode" class="block text-sm font-medium text-gray-700 mb-1">
                  ZIP Code <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="lf-zipCode"
                  name="zipCode"
                  required
                  pattern="[0-9]{5}"
                  inputmode="numeric"
                  maxlength="5"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-base"
                  placeholder="93117"
                />
              </div>
            </div>

            <div>
              <label for="lf-phone" class="block text-sm font-medium text-gray-700 mb-1">
                Phone Number <span class="text-red-500">*</span>
              </label>
              <input
                type="tel"
                id="lf-phone"
                name="phone"
                required
                autocomplete="tel"
                inputmode="tel"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-base"
                placeholder="(805) 555-0123"
              />
              <p class="text-xs text-gray-400 mt-1">We'll text or call with your personalized rate</p>
            </div>
          </div>

          <!-- Step 2: Additional Details (shown after step 1 interaction) -->
          <div id="lf-step-2" class="hidden space-y-4 pt-4 border-t border-gray-100">
            <p class="text-sm text-gray-600 font-medium">Almost done! Who should we contact?</p>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="lf-firstName" class="block text-sm font-medium text-gray-700 mb-1">
                  First Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="lf-firstName"
                  name="firstName"
                  required
                  autocomplete="given-name"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="John"
                />
              </div>

              <div>
                <label for="lf-lastName" class="block text-sm font-medium text-gray-700 mb-1">
                  Last Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="lf-lastName"
                  name="lastName"
                  required
                  autocomplete="family-name"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                  placeholder="Smith"
                />
              </div>
            </div>

            <div>
              <label for="lf-email" class="block text-sm font-medium text-gray-700 mb-1">
                Email <span class="text-gray-400 text-xs font-normal">(optional)</span>
              </label>
              <input
                type="email"
                id="lf-email"
                name="email"
                autocomplete="email"
                inputmode="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="john@example.com"
              />
            </div>
          </div>

          <button
            type="submit"
            id="lf-submit-btn"
            class="w-full bg-orange-500 text-white py-4 px-6 rounded-lg text-lg font-bold hover:bg-orange-600 focus:ring-4 focus:ring-orange-300 transition-all disabled:opacity-50 disabled:cursor-not-allowed shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <span id="lf-btn-text" class="flex items-center justify-center gap-2">
              See My Rate
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </button>

          <p class="text-xs text-gray-400 text-center">
            By submitting, you agree to our <a href="/privacy" class="text-blue-600 hover:underline">Privacy Policy</a>.
            No spam, ever.
          </p>
        </form>

        <!-- Success State -->
        <div id="lf-success-message" class="hidden text-center py-6">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">You're All Set!</h3>
          <p class="text-gray-600 mb-6">
            A local agent will reach out shortly with your personalized rate.
          </p>

          <div class="bg-blue-50 rounded-xl p-5 text-left space-y-3">
            <p class="font-semibold text-blue-900 text-sm">What happens next:</p>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <span class="text-blue-600 font-bold text-xs">1</span>
              </div>
              <p class="text-sm text-blue-800">
                <strong>Check your phone</strong> — we often call within 1-2 hours during business hours (M-F 9am-6pm)
              </p>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <span class="text-blue-600 font-bold text-xs">2</span>
              </div>
              <p class="text-sm text-blue-800">
                <strong>Save this number:</strong> <span class="font-mono bg-blue-100 px-2 py-0.5 rounded">(805) 845-7005</span> so you don't miss our call
              </p>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <span class="text-blue-600 font-bold text-xs">3</span>
              </div>
              <p class="text-sm text-blue-800">
                <strong>Have your current policy handy</strong> if you have one — helps us find you the best rate
              </p>
            </div>
          </div>
        </div>

        <!-- Error State -->
        <div id="lf-error-message" class="hidden bg-red-50 border border-red-200 rounded-lg p-4 mt-4">
          <div class="flex items-center gap-2 text-red-800">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            <span class="font-medium">Something went wrong. Please try again.</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('lead-form') as HTMLFormElement;
  const submitBtn = document.getElementById('lf-submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('lf-btn-text');
  const successMessage = document.getElementById('lf-success-message');
  const errorMessage = document.getElementById('lf-error-message');
  const step2 = document.getElementById('lf-step-2');

  // Phone formatting
  const phoneInput = document.getElementById('lf-phone') as HTMLInputElement;
  phoneInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    let value = target.value.replace(/\D/g, '');
    if (value.length >= 6) {
      value = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6, 10)}`;
    } else if (value.length >= 3) {
      value = `(${value.slice(0, 3)}) ${value.slice(3)}`;
    }
    target.value = value;
  });

  // Progressive disclosure: show step 2 when phone is filled
  phoneInput?.addEventListener('blur', () => {
    if (phoneInput.value.length >= 10) {
      step2?.classList.remove('hidden');
      if (btnText) {
        btnText.innerHTML = `
          Get My Rate
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        `;
      }
    }
  });

  // Pre-fill ZIP from session storage (from hero form)
  const savedZip = sessionStorage.getItem('userZipCode');
  if (savedZip) {
    const zipInput = document.getElementById('lf-zipCode') as HTMLInputElement;
    if (zipInput && !zipInput.value) {
      zipInput.value = savedZip;
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Make sure step 2 fields are visible and filled
    const firstNameInput = document.getElementById('lf-firstName') as HTMLInputElement;
    const lastNameInput = document.getElementById('lf-lastName') as HTMLInputElement;

    if (!firstNameInput?.value || !lastNameInput?.value) {
      step2?.classList.remove('hidden');
      firstNameInput?.focus();
      return;
    }

    submitBtn.disabled = true;
    if (btnText) {
      btnText.innerHTML = '<svg class="animate-spin w-5 h-5 mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
    }
    errorMessage?.classList.add('hidden');

    const formData = new FormData(form);
    const data = {
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      email: formData.get('email') || '',
      phone: formData.get('phone'),
      insuranceType: formData.get('insuranceType'),
      zipCode: formData.get('zipCode'),
      source: window.location.pathname,
      timestamp: new Date().toISOString()
    };

    try {
      const response = await fetch('https://bzjssogezdnybbenqygq.supabase.co/functions/v1/submit-lead', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (!response.ok) throw new Error('Failed to submit');

      if (typeof gtag !== 'undefined') {
        gtag('event', 'generate_lead', {
          'event_category': 'form',
          'event_label': data.insuranceType,
          'value': 1
        });
      }

      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');

      // Clear session storage
      sessionStorage.removeItem('userZipCode');
    } catch (error) {
      console.error('Form submission error:', error);
      errorMessage?.classList.remove('hidden');
      submitBtn.disabled = false;
      if (btnText) {
        btnText.innerHTML = `
          Get My Rate
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        `;
      }
    }
  });
</script>
