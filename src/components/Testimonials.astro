---
// Social proof testimonials with star ratings
interface Testimonial {
  name: string;
  location: string;
  quote: string;
  rating: number;
  savings?: string;
  insuranceType?: string;
}

interface Props {
  testimonials?: Testimonial[];
}

const defaultTestimonials: Testimonial[] = [
  {
    name: "Maria S.",
    location: "Goleta",
    quote: "I was paying way too much for auto insurance. They found me the same coverage for $60 less per month. So easy!",
    rating: 5,
    savings: "$720/year",
    insuranceType: "Auto"
  },
  {
    name: "Kevin T.",
    location: "Santa Barbara",
    quote: "Bundled my home and auto insurance and saved over $100 a month. Wish I'd done this years ago.",
    rating: 5,
    savings: "$1,200/year",
    insuranceType: "Home + Auto"
  },
  {
    name: "Jessica L.",
    location: "Isla Vista",
    quote: "As a UCSB student, I thought insurance would be expensive. Got renters insurance for just $15/month!",
    rating: 5,
    savings: "$15/mo",
    insuranceType: "Renters"
  },
  {
    name: "Robert M.",
    location: "Carpinteria",
    quote: "After the Thomas Fire, I knew I needed better home coverage. They found me a policy that actually covers wildfire damage.",
    rating: 5,
    insuranceType: "Home"
  },
  {
    name: "Ana G.",
    location: "Goleta",
    quote: "Hablamos español y fue muy fácil. Me ayudaron a encontrar seguro de auto barato para mi familia.",
    rating: 5,
    savings: "$580/year",
    insuranceType: "Auto"
  },
  {
    name: "David K.",
    location: "Santa Barbara",
    quote: "Got my small business insured in less than a week. Great local knowledge about what coverage I actually needed.",
    rating: 5,
    insuranceType: "Business"
  }
];

const { testimonials = defaultTestimonials } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">What Our Neighbors Are Saying</h2>
      <p class="text-lg text-gray-600">Real savings from real Goleta and Santa Barbara residents</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100 hover:shadow-lg transition-shadow">
          <!-- Stars -->
          <div class="flex items-center gap-1 mb-4">
            {[...Array(5)].map((_, i) => (
              <svg
                class={`w-5 h-5 ${i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-gray-700 mb-4 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          <!-- Footer -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-100">
            <div>
              <div class="font-semibold text-gray-900">{testimonial.name}</div>
              <div class="text-sm text-gray-500">{testimonial.location}</div>
            </div>
            {testimonial.savings && (
              <div class="text-right">
                <div class="text-green-600 font-bold">{testimonial.savings}</div>
                <div class="text-xs text-gray-500">saved on {testimonial.insuranceType}</div>
              </div>
            )}
            {!testimonial.savings && testimonial.insuranceType && (
              <div class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-medium">
                {testimonial.insuranceType}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-10">
      <a
        href="#quote-form"
        class="inline-flex items-center justify-center bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all shadow-lg hover:shadow-xl"
      >
        Join 2,847 Happy Customers
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<!-- Review Schema for SEO -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Goleta Insurance",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "527",
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": testimonials.slice(0, 3).map(t => ({
    "@type": "Review",
    "author": {
      "@type": "Person",
      "name": t.name
    },
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": t.rating,
      "bestRating": "5"
    },
    "reviewBody": t.quote
  }))
})} />
