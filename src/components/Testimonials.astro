---
// Social proof testimonials with star ratings
interface Testimonial {
  name: string;
  location: string;
  quote: string;
  rating: number;
  savings?: string;
  insuranceType?: string;
}

interface Props {
  testimonials?: Testimonial[];
}

const defaultTestimonials: Testimonial[] = [
  {
    name: "Maria S.",
    location: "Goleta",
    quote: "I was paying way too much for auto insurance. They found me the same coverage for $60 less per month. So easy!",
    rating: 5,
    savings: "$720/year",
    insuranceType: "Auto"
  },
  {
    name: "Kevin T.",
    location: "Santa Barbara",
    quote: "Bundled my home and auto insurance and saved over $100 a month. Wish I'd done this years ago.",
    rating: 5,
    savings: "$1,200/year",
    insuranceType: "Home + Auto"
  },
  {
    name: "Jessica L.",
    location: "Isla Vista",
    quote: "As a UCSB student, I thought insurance would be expensive. Got renters insurance for just $15/month!",
    rating: 5,
    savings: "$15/mo",
    insuranceType: "Renters"
  },
  {
    name: "Robert M.",
    location: "Carpinteria",
    quote: "After the Thomas Fire, I knew I needed better home coverage. They found me a policy that actually covers wildfire damage.",
    rating: 5,
    insuranceType: "Home"
  },
  {
    name: "Ana G.",
    location: "Goleta",
    quote: "Hablamos español y fue muy fácil. Me ayudaron a encontrar seguro de auto barato para mi familia.",
    rating: 5,
    savings: "$580/year",
    insuranceType: "Auto"
  },
  {
    name: "David K.",
    location: "Santa Barbara",
    quote: "Got my small business insured in less than a week. Great local knowledge about what coverage I actually needed.",
    rating: 5,
    insuranceType: "Business"
  }
];

const { testimonials = defaultTestimonials } = Astro.props;
---

<section class="py-20 md:py-24 bg-gradient-to-b from-[var(--color-warm-50)] to-white relative overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-[var(--color-primary-100)]/30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-[var(--color-accent-100)]/40 rounded-full blur-3xl"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-14">
      <div class="inline-flex items-center gap-2 badge-primary mb-4">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span>Verified Reviews</span>
      </div>
      <h2 class="text-3xl md:text-4xl font-semibold text-[var(--color-warm-900)] mb-4" style="font-family: var(--font-display);">
        What Our Neighbors Are Saying
      </h2>
      <p class="text-lg text-[var(--color-warm-600)] max-w-2xl mx-auto">
        Real savings from real 805 residents — join thousands who've found better rates
      </p>
    </div>

    <!-- Testimonial Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial, index) => (
        <div
          class="testimonial-card group bg-white rounded-2xl p-6 md:p-7 shadow-[var(--shadow-md)] hover:shadow-[var(--shadow-xl)] border border-[var(--color-warm-100)] hover:border-[var(--color-warm-200)] transition-all duration-500 relative overflow-hidden"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Quote mark decoration -->
          <div class="absolute top-4 right-4 opacity-5 group-hover:opacity-10 transition-opacity">
            <svg class="w-16 h-16 text-[var(--color-primary-800)]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>

          <!-- Stars -->
          <div class="flex items-center gap-1 mb-4">
            {[...Array(5)].map((_, i) => (
              <svg
                class={`w-5 h-5 ${i < testimonial.rating ? 'text-amber-400' : 'text-[var(--color-warm-200)]'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-[var(--color-warm-700)] mb-6 leading-relaxed text-[15px] relative z-10">
            "{testimonial.quote}"
          </blockquote>

          <!-- Footer -->
          <div class="flex items-center justify-between pt-5 border-t border-[var(--color-warm-100)]">
            <div class="flex items-center gap-3">
              <!-- Avatar placeholder -->
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[var(--color-primary-400)] to-[var(--color-primary-600)] flex items-center justify-center text-white font-semibold text-sm shadow-sm">
                {testimonial.name.charAt(0)}
              </div>
              <div>
                <div class="font-semibold text-[var(--color-warm-900)] text-sm">{testimonial.name}</div>
                <div class="text-xs text-[var(--color-warm-500)]">{testimonial.location}</div>
              </div>
            </div>
            {testimonial.savings && (
              <div class="text-right">
                <div class="text-[var(--color-success-600)] font-bold text-sm">{testimonial.savings}</div>
                <div class="text-[10px] text-[var(--color-warm-500)] uppercase tracking-wide">saved</div>
              </div>
            )}
            {!testimonial.savings && testimonial.insuranceType && (
              <div class="badge-primary text-xs py-1 px-2.5">
                {testimonial.insuranceType}
              </div>
            )}
          </div>

          <!-- Hover gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary-50)]/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-14">
      <a
        href="#quote-form"
        class="btn-primary py-4 px-8 text-base"
      >
        <span>Join 2,847 Happy Customers</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <p class="text-sm text-[var(--color-warm-500)] mt-4">
        Average savings of $547/year &bull; Free comparison in 2 minutes
      </p>
    </div>
  </div>
</section>

<style>
  .testimonial-card {
    animation: fade-in-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- Review Schema for SEO -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "805 Insurance",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "527",
    "bestRating": "5",
    "worstRating": "1"
  },
  "review": testimonials.slice(0, 3).map(t => ({
    "@type": "Review",
    "author": {
      "@type": "Person",
      "name": t.name
    },
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": t.rating,
      "bestRating": "5"
    },
    "reviewBody": t.quote
  }))
})} />
