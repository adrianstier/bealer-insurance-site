<style>
  @keyframes bounce-once {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-bounce-once {
    animation: bounce-once 0.5s ease-out;
  }
</style>

<script>
  const form = document.getElementById('multi-step-form') as HTMLFormElement;
  const progressBar = document.getElementById('progress-bar');
  const currentStepEl = document.getElementById('current-step');

  let currentStep = 1;
  const totalSteps = 4;

  // Form data storage
  const formData: Record<string, any> = {};

  // Phone formatting
  const phoneInput = document.getElementById('phone') as HTMLInputElement;
  phoneInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    let value = target.value.replace(/\D/g, '');
    if (value.length >= 6) {
      value = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6, 10)}`;
    } else if (value.length >= 3) {
      value = `(${value.slice(0, 3)}) ${value.slice(3)}`;
    }
    target.value = value;
  });

  // Name auto-capitalize
  const nameInput = document.getElementById('fullName') as HTMLInputElement;
  nameInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    target.value = target.value.replace(/\b\w/g, c => c.toUpperCase());
  });

  // Pre-fill ZIP from session storage
  const savedZip = sessionStorage.getItem('userZipCode');
  if (savedZip) {
    const zipInput = document.getElementById('zipCode') as HTMLInputElement;
    if (zipInput) zipInput.value = savedZip;
  }

  function updateProgress() {
    const progress = (currentStep / totalSteps) * 100;
    if (progressBar) progressBar.style.width = `${progress}%`;
    if (currentStepEl) currentStepEl.textContent = String(currentStep);
  }

  function showStep(step: number) {
    document.querySelectorAll('.step-content').forEach(el => el.classList.add('hidden'));
    const stepEl = document.getElementById(`step-${step}`);
    stepEl?.classList.remove('hidden');
    currentStep = step;
    updateProgress();

    // Track step view
    if (typeof gtag !== 'undefined') {
      gtag('event', 'form_step_view', {
        'event_category': 'form',
        'event_label': `step_${step}`,
        'value': step
      });
    }
  }

  function validateStep(step: number): boolean {
    if (step === 1) {
      const zip = (document.getElementById('zipCode') as HTMLInputElement)?.value;
      if (!zip || zip.length !== 5) {
        alert('Please enter a valid 5-digit ZIP code');
        return false;
      }
      formData.zipCode = zip;
      sessionStorage.setItem('userZipCode', zip);
    }

    if (step === 2) {
      const checked = document.querySelectorAll('input[name="insuranceTypes"]:checked');
      if (checked.length === 0) {
        alert('Please select at least one insurance type');
        return false;
      }
      formData.insuranceTypes = Array.from(checked).map((el: any) => el.value);
    }

    if (step === 3) {
      const insured = document.querySelector('input[name="currentlyInsured"]:checked') as HTMLInputElement;
      const homeowner = document.querySelector('input[name="homeowner"]:checked') as HTMLInputElement;
      formData.currentlyInsured = insured?.value || 'not_specified';
      formData.homeowner = homeowner?.value || 'not_specified';
    }

    return true;
  }

  // Navigation handlers
  document.getElementById('next-1')?.addEventListener('click', () => {
    if (validateStep(1)) showStep(2);
  });

  document.getElementById('next-2')?.addEventListener('click', () => {
    if (validateStep(2)) showStep(3);
  });

  document.getElementById('next-3')?.addEventListener('click', () => {
    if (validateStep(3)) showStep(4);
  });

  document.getElementById('back-2')?.addEventListener('click', () => showStep(1));
  document.getElementById('back-3')?.addEventListener('click', () => showStep(2));
  document.getElementById('back-4')?.addEventListener('click', () => showStep(3));

  // Enter key navigation
  document.getElementById('zipCode')?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      document.getElementById('next-1')?.click();
    }
  });

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const fullName = (document.getElementById('fullName') as HTMLInputElement)?.value;
    const phone = (document.getElementById('phone') as HTMLInputElement)?.value;
    const email = (document.getElementById('email') as HTMLInputElement)?.value;

    if (!fullName || !phone) {
      alert('Please fill in your name and phone number');
      return;
    }

    // Split name
    const nameParts = fullName.trim().split(' ');
    const firstName = nameParts[0] || '';
    const lastName = nameParts.slice(1).join(' ') || '';

    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const submitText = document.getElementById('submit-text');

    submitBtn.disabled = true;
    if (submitText) submitText.textContent = 'Submitting...';

    const data = {
      firstName,
      lastName,
      email: email || '',
      phone,
      insuranceType: formData.insuranceTypes?.join(', ') || 'general',
      zipCode: formData.zipCode,
      currentlyInsured: formData.currentlyInsured,
      homeowner: formData.homeowner,
      source: window.location.pathname,
      timestamp: new Date().toISOString()
    };

    try {
      const response = await fetch('https://bzjssogezdnybbenqygq.supabase.co/functions/v1/submit-lead', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (!response.ok) throw new Error('Failed to submit');

      // Track conversion
      if (typeof gtag !== 'undefined') {
        gtag('event', 'generate_lead', {
          'event_category': 'form',
          'event_label': data.insuranceType,
          'value': 1
        });
      }

      // Show success
      document.getElementById('step-indicator')?.classList.add('hidden');
      progressBar?.parentElement?.classList.add('hidden');
      showStep('success' as any);

      sessionStorage.setItem('leadSubmitted', 'true');
      sessionStorage.removeItem('userZipCode');

    } catch (error) {
      console.error('Form submission error:', error);
      alert('Something went wrong. Please try again.');
      submitBtn.disabled = false;
      if (submitText) submitText.textContent = 'Get My Free Quote';
    }
  });
</script>
