---
// Urgency banner with limited-time messaging
interface Props {
  message?: string;
}

// Dynamic month and year for evergreen urgency messaging
const currentMonth = new Date().toLocaleString('en-US', { month: 'long' });
const currentYear = new Date().getFullYear();
const nextYear = currentYear + 1;

const { message = `${currentMonth} Special: Lock in ${currentYear} rates before ${nextYear} increases!` } = Astro.props;
---

<div class="bg-gradient-to-r from-red-600 to-orange-500 text-white py-2 px-4 text-center text-sm font-medium">
  <div class="max-w-7xl mx-auto flex items-center justify-center gap-2 flex-wrap">
    <svg class="w-4 h-4 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
    </svg>
    <span>{message}</span>
    <a href="#quote-form" class="underline hover:no-underline font-bold ml-1">
      Get Your Quote Now â†’
    </a>
  </div>
</div>
