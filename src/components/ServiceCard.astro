---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: "car" | "home" | "building" | "users" | "heart" | "shield";
  priceFrom?: string;
  insuranceType?: string;
}

const { title, description, href, icon, priceFrom, insuranceType } = Astro.props;

// Map icon to insurance type for form pre-fill
const iconToType: Record<string, string> = {
  car: "auto",
  home: "home",
  users: "renters",
  heart: "life",
  building: "business",
  shield: "other"
};

const formType = insuranceType || iconToType[icon] || "";

// Default prices for each type
const defaultPrices: Record<string, string> = {
  car: "$89/mo",
  home: "$95/mo",
  users: "$15/mo",
  heart: "$20/mo",
  building: "$49/mo",
  shield: "$35/mo"
};

const displayPrice = priceFrom || defaultPrices[icon] || null;

// Icon colors for variety
const iconColors: Record<string, { bg: string; icon: string; hover: string }> = {
  car: { bg: "bg-blue-50", icon: "text-[var(--color-primary-600)]", hover: "group-hover:bg-[var(--color-primary-600)]" },
  home: { bg: "bg-amber-50", icon: "text-amber-600", hover: "group-hover:bg-amber-500" },
  users: { bg: "bg-violet-50", icon: "text-violet-600", hover: "group-hover:bg-violet-500" },
  heart: { bg: "bg-rose-50", icon: "text-rose-600", hover: "group-hover:bg-rose-500" },
  building: { bg: "bg-emerald-50", icon: "text-emerald-600", hover: "group-hover:bg-emerald-500" },
  shield: { bg: "bg-sky-50", icon: "text-sky-600", hover: "group-hover:bg-sky-500" }
};

const colorScheme = iconColors[icon] || iconColors.shield;

const icons = {
  car: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />`,
  home: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />`,
  building: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  users: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`
};
---

<div class="group service-card relative bg-white rounded-2xl shadow-[var(--shadow-md)] hover:shadow-[var(--shadow-xl)] transition-all duration-500 p-6 md:p-7 border border-[var(--color-warm-100)] hover:border-[var(--color-warm-200)] overflow-hidden">
  <!-- Subtle gradient background on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-warm-50)] to-white opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <!-- Price badge -->
  {displayPrice && (
    <div class="absolute top-0 right-0 badge-success rounded-tr-2xl rounded-bl-xl px-3 py-1.5 text-xs font-bold shadow-sm">
      From {displayPrice}
    </div>
  )}

  <div class="relative flex items-start gap-5">
    <!-- Icon with animated background -->
    <div class={`flex-shrink-0 w-14 h-14 ${colorScheme.bg} ${colorScheme.hover} rounded-xl flex items-center justify-center transition-all duration-500 group-hover:scale-110 group-hover:rotate-3 group-hover:shadow-lg`}>
      <svg
        class={`w-7 h-7 ${colorScheme.icon} group-hover:text-white transition-colors duration-500`}
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        set:html={icons[icon]}
      />
    </div>

    <div class="flex-1 min-w-0">
      <!-- Title with display font -->
      <h3 class="text-lg font-semibold text-[var(--color-warm-900)] mb-2 group-hover:text-[var(--color-primary-800)] transition-colors" style="font-family: var(--font-display);">
        {title}
      </h3>

      <!-- Description -->
      <p class="text-[var(--color-warm-600)] text-sm leading-relaxed mb-5">
        {description}
      </p>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <a
          href={`#quote-form`}
          class="service-quote-btn btn-primary py-2.5 px-5 text-sm"
          data-insurance-type={formType}
        >
          <span>Get Quote</span>
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a
          href={href}
          class="text-[var(--color-primary-600)] text-sm font-medium hover:text-[var(--color-primary-800)] transition-colors flex items-center gap-1 group/link"
        >
          <span>Learn more</span>
          <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Decorative corner accent -->
  <div class="absolute -bottom-8 -right-8 w-24 h-24 rounded-full bg-gradient-to-br from-[var(--color-primary-100)] to-transparent opacity-0 group-hover:opacity-50 transition-opacity duration-500"></div>
</div>

<script>
  // Pre-fill insurance type when clicking service card quote buttons
  document.querySelectorAll('.service-quote-btn').forEach((btn) => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const insuranceType = target.dataset.insuranceType;

      if (insuranceType) {
        // Wait for scroll, then pre-fill
        setTimeout(() => {
          const typeSelect = document.getElementById('insuranceType') as HTMLSelectElement;
          if (typeSelect) {
            typeSelect.value = insuranceType;
          }
        }, 300);
      }
    });
  });
</script>
