<BaseLayout
  title="Business Insurance Goleta, CA | Commercial Insurance Quotes | Bealer Insurance"
  description="Protect your Goleta business with comprehensive commercial insurance. General liability, workers' comp, and BOP coverage for Santa Barbara County businesses."
>
  <Header slot="header" currentPath="/business-insurance-goleta" />

  <Hero
    title="Business Insurance for Goleta Entrepreneurs"
    subtitle="Protect your livelihood with coverage designed for local businesses. From tech startups to wineries, we've got you covered."
    ctaText="Get Your Business Quote"
  />

  <!-- Coverage Types -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Business Insurance Coverage Options</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Comprehensive protection for every aspect of your business operations.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {coverageTypes.map((coverage) => (
          <div class="bg-gray-50 rounded-xl p-6 border border-gray-100">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">{coverage.title}</h3>
            <p class="text-gray-600 text-sm">{coverage.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industries Served -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Industries We Serve</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Specialized coverage for Goleta and Santa Barbara's diverse business community.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {industries.map((industry) => (
          <div class="bg-white rounded-xl p-6 text-center shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="text-3xl mb-3">{industry.icon}</div>
            <span class="text-gray-900 font-medium">{industry.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Local Business Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-6">Insurance for Goleta's Growing Business Community</h2>
          <p class="text-blue-100 mb-6">
            From Hollister Avenue retailers to Goleta industrial park manufacturers, we understand the unique insurance needs of Santa Barbara County businesses.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Tech Corridor Coverage</strong> - E&O and cyber liability for Goleta tech companies</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Restaurant & Hospitality</strong> - Liquor liability and food contamination coverage</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Contractor Coverage</strong> - Bonding, workers' comp, and equipment protection</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span><strong>Wine Country</strong> - Specialized coverage for wineries and tasting rooms</span>
            </li>
          </ul>
        </div>

        <div class="bg-white text-gray-900 rounded-2xl p-8">
          <h3 class="text-2xl font-bold mb-6">California Requirements</h3>
          <div class="space-y-4">
            <div class="flex items-start gap-3 pb-4 border-b border-gray-200">
              <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <div class="font-semibold">Workers' Compensation</div>
                <div class="text-sm text-gray-600">Required if you have any employees</div>
              </div>
            </div>
            <div class="flex items-start gap-3 pb-4 border-b border-gray-200">
              <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <div class="font-semibold">Commercial Auto</div>
                <div class="text-sm text-gray-600">Required for business-use vehicles</div>
              </div>
            </div>
            <div class="flex items-start gap-3 pb-4 border-b border-gray-200">
              <svg class="w-6 h-6 text-yellow-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              <div>
                <div class="font-semibold">General Liability</div>
                <div class="text-sm text-gray-600">Often required by landlords & clients</div>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-yellow-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              <div>
                <div class="font-semibold">Professional Liability</div>
                <div class="text-sm text-gray-600">Required for licensed professionals</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
