  <!-- Lead Form -->
  <LeadForm
    insuranceType="business"
    heading="Get Your Free Business Insurance Quote"
    subheading="Protect your Goleta business with the right coverage"
  />

  <!-- FAQ Section -->
  <FAQ title="Business Insurance FAQs" faqs={faqs} />

  <!-- Related Services -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Complete Business Protection</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="/auto-insurance-goleta" class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="font-semibold text-gray-900 mb-2">Commercial Auto</h3>
          <p class="text-gray-600 text-sm">Coverage for company vehicles, delivery vans, and fleet insurance.</p>
        </a>
        <a href="/home-insurance-goleta" class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="font-semibold text-gray-900 mb-2">Home-Based Business</h3>
          <p class="text-gray-600 text-sm">Protect your home business with proper coverage beyond homeowners.</p>
        </a>
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <h3 class="font-semibold text-gray-900 mb-2">Cyber Liability</h3>
          <p class="text-gray-600 text-sm">Data breach protection for businesses that handle customer information.</p>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
