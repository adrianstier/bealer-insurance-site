---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import LeadForm from '../../components/LeadForm.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const services = [
  {
    title: "Seguro de Auto",
    description: "Cobertura completa para su vehículo con tarifas competitivas. Protéjase en las carreteras de Goleta con opciones de responsabilidad civil, colisión y cobertura integral.",
    href: "/auto-insurance-goleta",
    icon: "car" as const
  },
  {
    title: "Seguro de Casa",
    description: "Proteja su mayor inversión. Cobertura para hogares en Goleta y Santa Bárbara contra incendios, robos, desastres naturales y responsabilidad civil.",
    href: "/home-insurance-goleta",
    icon: "home" as const
  },
  {
    title: "Seguro para Inquilinos",
    description: "Protección accesible para estudiantes de UCSB y residentes de Isla Vista. Cubra sus pertenencias y obtenga protección de responsabilidad desde menos de $20/mes.",
    href: "/renters-insurance-goleta",
    icon: "users" as const
  },
  {
    title: "Seguro Comercial",
    description: "Cobertura personalizada para los negocios en crecimiento de Goleta. Desde responsabilidad general hasta compensación laboral, protegemos su negocio.",
    href: "/business-insurance-goleta",
    icon: "building" as const
  }
];
---

<BaseLayout
  title="Goleta Insurance | Seguro de Auto, Casa e Inquilinos en Goleta, CA"
  description="Encuentre agentes de seguros locales en Goleta, CA. Obtenga cotizaciones competitivas de seguro de auto, casa, inquilinos y negocios. Sirviendo Santa Bárbara, Isla Vista y estudiantes de UCSB."
  lang="es"
>
  <Header slot="header" currentPath="/es" />

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-900 to-blue-700 text-white">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 bg-white/10 rounded-full px-4 py-2 mb-6">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
          </svg>
          <span class="text-sm">Hablamos Español</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          Cobertura de Seguros Local para Goleta y Santa Bárbara
        </h1>
        <p class="text-xl md:text-2xl text-blue-100 mb-8">
          Obtenga cotizaciones personalizadas de agentes de confianza que entienden su comunidad. Seguro de auto, casa, inquilinos y negocios adaptado a sus necesidades.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#quote-form"
            class="inline-flex items-center justify-center bg-white text-blue-900 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-50 transition-colors shadow-lg"
          >
            Obtenga Su Cotización Gratis
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <div class="mt-12 flex flex-wrap items-center gap-6 text-sm text-blue-200">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Agentes Locales de Goleta</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Cotizaciones Gratis</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Agentes Licenciados de California</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Servicios de Seguros para Cada Necesidad</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Desde proteger su auto en la Autopista 101 hasta asegurar su hogar en Goleta contra incendios forestales, lo conectamos con la cobertura correcta.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {services.map((service) => (
          <ServiceCard {...service} />
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Por Qué las Familias de Goleta Eligen Agentes Locales
          </h2>
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Experiencia Local</h3>
                <p class="text-gray-600">Agentes que entienden los riesgos únicos del área de Goleta y Santa Bárbara.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Hablamos Español</h3>
                <p class="text-gray-600">Agentes bilingües disponibles para ayudarle en su idioma preferido.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Múltiples Opciones de Aseguradoras</h3>
                <p class="text-gray-600">Compare tarifas de más de 20 aseguradoras para encontrar la mejor cobertura y precio.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Servicio Personalizado</h3>
                <p class="text-gray-600">Trabaje con personas reales que se preocupan por su cobertura.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-blue-600 rounded-2xl p-8 text-white">
          <div class="grid grid-cols-2 gap-8">
            <div class="text-center">
              <div class="text-4xl font-bold mb-2">20+</div>
              <div class="text-blue-200">Aseguradoras</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold mb-2">24hr</div>
              <div class="text-blue-200">Respuesta de Cotización</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold mb-2">100%</div>
              <div class="text-blue-200">Agentes Licenciados</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold mb-2">Gratis</div>
              <div class="text-blue-200">Sin Obligación</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Lead Form -->
  <LeadForm
    heading="Obtenga Su Cotización Gratis Hoy"
    subheading="Conéctese con un agente de seguros local de Goleta en minutos"
  />

  <!-- Local Areas Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Sirviendo a la Costa Central</h2>
        <p class="text-lg text-gray-600">Conectándolo con agentes en estas comunidades</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {["Goleta", "Santa Bárbara", "Isla Vista", "Carpintería", "Montecito", "Summerland", "Hope Ranch", "Campus UCSB"].map((area) => (
          <div class="bg-white rounded-lg p-4 text-center shadow-sm border border-gray-100">
            <span class="text-gray-900 font-medium">{area}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
